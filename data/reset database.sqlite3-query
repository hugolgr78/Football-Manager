-- database: ./JohnLocke.db

UPDATE league_teams
SET points = 0, games_won = 0, games_drawn = 0, games_lost = 0, goals_scored = 0, goals_conceded = 0;

UPDATE managers
SET games_played = 0,
    games_won = 0,
    games_lost = 0;

DELETE FROM match_events;

UPDATE matches
SET score_home = 0, 
    score_away = 0;

DELETE FROM team_history;

DELETE FROM team_lineup;

DELETE FROM emails;

UPDATE leagues
SET current_matchday = 1;

DELETE FROM player_bans;

INSERT INTO match_events (id, match_id, event_type, time, player_id)
